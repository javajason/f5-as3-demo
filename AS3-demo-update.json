{
        "info": {
                "_postman_id": "94f508c5-eb8e-4556-9347-e8b11370da55",
                "name": "AS3 Demo0-POST",
                "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
        },
        "item": [
                {
                        "name": "Update-Object",
                        "event": [
                                {
                                        "listen": "prerequest",
                                        "script": {
                                                "exec": [
                                                        "if ( pm.environment.get(\"pass\").length == 0) {",
                                                        "  console.log(\"Illegal password (pass): length is 0\");",
                                                        "  exit();",
                                                        "}",
                                                        "GitRepo = pm.environment.get(\"GitRepo\");",
                                                        "command = pm.environment.get(\"command\");",
                                                        "",
                                                        "pm.sendRequest(GitRepo + command, (error, response) => {",
                                                        "  if (error) {",
                                                        "    console.log(error);",
                                                        "  } else {",
                                                        "    pm.environment.set(\"payload\", response.text());",
                                                        "  }",
                                                        "});",
                                                        ""
                                                ],
                                                "type": "text/javascript"
                                        }
                                },
                                {
                                        "listen": "test",
                                        "script": {
                                                "exec": [
                                                        "console.log(pm.response.json());"
                                                ],
                                                "type": "text/javascript"
                                        }
                                }
                        ],
                        "request": {
                                "method": "POST",
                                "header": [],
                                "body": {
                                        "mode": "raw",
                                        "raw": "{{payload}}"
                                },
                                "url": {
                                        "raw": "https://{{host}}/mgmt/shared/appsvcs/declare",
                                        "protocol": "https",
                                        "host": [
                                                "{{host}}"
                                        ],
                                        "path": [
                                                "mgmt",
                                                "shared",
                                                "appsvcs",
                                                "declare"
                                        ]
                                }
                        },
                        "response": []
                }
        ],
        "auth": {
                "type": "basic",
                "basic": [
                        {
                                "key": "password",
                                "value": "{{pass}}",
                                "type": "string"
                        },
                        {
                                "key": "username",
                                "value": "{{user}}",
                                "type": "string"
                        }
                ]
        },
        "event": [
                {
                        "listen": "prerequest",
                        "script": {
                                "type": "text/javascript",
                                "exec": [
                                        ""
                                ]
                        }
                },
                {
                        "listen": "test",
                        "script": {
                                "type": "text/javascript",
                                "exec": [
                                        ""
                                ]
                        }
                }
        ]
}
