{
        "info": {
                "_postman_id": "94f508c5-eb8e-4556-9347-e8b11370da55",
                "name": "AS3 Demo0-POST",
                "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
        },
        "item": [
                {
                        "name": "Update-Object",
                        "exec": [
                                "Command = \"Update-VS.json\";",
                                "",
                                "GitRepo = pm.environment.get(\"GitRepo\");",
                                "",
                                "pm.sendRequest(GitRepo + Command, (error, response) => {",
                                "  if (error) {",
                                "    console.log(error);",
                                "  } else {",
                                "    console.log(response);",
                                "",
                                "    pm.variables.set(\"payload\", response.text());",
                                "    console.log(\"payload is: \" + pm.variables.get(\"payload\"));",
                                "    payload = payload.split('\"').join('\\\"');",
                                "    console.log(\"Modified payload is: \" + pm.variables.get(\"payload\"));",
                                "  }",
                                "});"
                        ],
                        "request": {
                                "method": "POST",
                                "header": [],
                                "body": {
                                        "mode": "raw",
                                        "raw": "{{payload}}"
                                },
                                "url": {
                                        "raw": "https://{{host}}/mgmt/shared/appsvcs/declare",
                                        "protocol": "https",
                                        "host": [
                                                "{{host}}"
                                        ],
                                        "path": [
                                                "mgmt",
                                                "shared",
                                                "appsvcs",
                                                "declare"
                                        ]
                                }
                        },
                        "response": []
                }
        ],
        "auth": {
                "type": "basic",
                "basic": [
                        {
                                "key": "password",
                                "value": "{{pass}}",
                                "type": "string"
                        },
                        {
                                "key": "username",
                                "value": "{{user}}",
                                "type": "string"
                        }
                ]
        },
        "event": [
